{
  "name": "@repeek/browser-extension",
  "private": true,
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "scripts": {
    "precommit": "lint-staged",
    "dev": "webpack --mode=development --watch",
    "build:css": "tailwindcss -i ./src/content/globals.css -o ./dist/content.css --minify",
    "build:ext": "webpack --mode=production",
    "build": "run-s build:ext build:css",
    "test": "cross-env BABEL_ENV=testing ava",
    "lint": "biome check .",
    "release:amo": "web-ext-submit --source-dir dist",
    "release:cws": "chrome-webstore-upload upload --source=dist --auto-publish",
    "release": "run-p release:*",
    "bump-version": "node scripts/bump-version.js",
    "git-release": "node scripts/git-release.js"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.1",
    "camelcase-keys": "^4.2.0",
    "copy-text-to-clipboard": "^1.0.4",
    "country-list": "^2.1.0",
    "date-fns": "^2.4.1",
    "detect-browser": "^5.3.0",
    "dom-chef": "^5.1.0",
    "element-ready": "^3.1.0",
    "js-cookie": "^2.2.1",
    "ky": "^0.11.1",
    "lodash": "^4.17.10",
    "mem": "^4.0.0",
    "p-memoize": "^1.0.0",
    "p-retry": "^1.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-sortable-hoc": "^0.6.8",
    "select-dom": "^7.1.1",
    "style-inject": "^0.3.0",
    "webext-options-sync": "^4.0.0",
    "webextension-polyfill": "^0.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "ajv": "^8.12.0",
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-env": "^3.2.5",
    "chrome-webstore-upload-cli": "^2.0.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^5.1.5",
    "esbuild-loader": "^2.21.0",
    "execa": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "load-json-file": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "semver": "^6.0.0",
    "sinon": "^4.4.2",
    "svg-inline-loader": "^0.8.2",
    "tailwindcss": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "web-ext": "^4.2.0",
    "web-ext-submit": "^4.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "write-json-file": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,json}": [
      "biome check --apply --no-errors-on-unmatched",
      "git add"
    ]
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "plugins": [
        "transform-react-jsx"
      ]
    }
  },
  "babel": {
    "env": {
      "testing": {
        "presets": [
          "env"
        ],
        "plugins": [
          "transform-object-rest-spread"
        ]
      }
    }
  }
}
